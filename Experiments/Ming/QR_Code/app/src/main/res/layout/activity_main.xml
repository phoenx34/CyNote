<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QR Code "
        android:textSize="40dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/textViewQrcode"
         />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QR Scanner "
        android:layout_below="@+id/textViewQrcode"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:id="@+id/qrScanner"
        android:onClick="qrScannerBtn"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QR Generator "
        android:layout_below="@+id/qrScanner"
        android:layout_centerHorizontal="true"
        android:id="@+id/genBtn"
        android:onClick="qrGeneratorBtn"
        />







</RelativeLayout>